<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/text_dark_color</item>
        <item name="android:colorAccent">@color/text_dark_color</item>
        <item name="android:background">@color/primary_layer_color</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_dark_color</item>
    </style>

    // Text View

    <style name="TextViewHeaderStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewNormalStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewBodyStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    // Toolbar Search View

    <style name="SearchViewStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/light_blue_square_rounded_shape_bg</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>


</resources>